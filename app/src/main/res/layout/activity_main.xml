<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/margin_padding_large"
        android:src="@drawable/logo_fiamaco_taekwondo"
        android:contentDescription="FIAMACO Taekwondo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/margin_padding_large"
        android:layout_marginVertical="@dimen/margin_padding_large">

        <Button
            android:id="@+id/join_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="Collegati"
            android:textSize="@dimen/text_size_large"/>

        <Button
            android:id="@+id/show_match_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="Visualizza turno"
            android:textSize="@dimen/text_size_large"/>

        <Button
            android:id="@+id/new_match_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="Crea nuovo turno"
            android:textSize="@dimen/text_size_large"/>

    </LinearLayout>

</LinearLayout>